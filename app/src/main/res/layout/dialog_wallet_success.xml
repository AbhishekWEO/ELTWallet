<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_solid_corners_grey">

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/backed_up"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/grey" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1">

        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="@string/not_yet"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/skyblue" />

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_below="@+id/walletname"
            android:layout_centerHorizontal="true"
            android:background="@color/grey"/>

        <Button
            android:id="@+id/dialogButtonYes"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="@string/yes_sure"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/skyblue" />

    </LinearLayout>

</RelativeLayout>