<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_solid_corners_grey">

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="@string/rename_wallet"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/name_wallet"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/walletname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"
        android:padding="4dp"
        android:background="@drawable/rounded_solid_corners_white_min_radius"
        android:hint="@string/enter_wallet_name"
        android:layout_below="@+id/text1"/>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/walletname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/grey" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1">

        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/skyblue" />

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_below="@+id/walletname"
            android:layout_centerHorizontal="true"
            android:background="@color/grey"/>

        <Button
            android:id="@+id/dialogButtonCreate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="@string/save"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/skyblue" />

    </LinearLayout>

</RelativeLayout>